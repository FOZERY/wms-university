{
	"name": "wms-university",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"type-check": "tsc --noEmit",
		"clean": "rimraf dist",
		"build": "npm run clean && nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"migrate:generate": "NODE_ENV=development drizzle-kit generate --config=drizzle.config.ts",
		"migrate:up": "NODE_ENV=development drizzle-kit migrate --config=drizzle.config.ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/swagger": "^11.2.3",
		"bcrypt": "^6.0.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.0",
		"ioredis": "^5.8.2",
		"postgres": "^3.4.7",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.1.2",
		"rxjs": "^7.8.1",
		"typebox": "^1.0.61",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"drizzle-kit": "^0.31.8",
		"globals": "^16.0.0",
		"jest": "^30.0.0",
		"prettier": "^3.4.2",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "5.8.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
