{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedKeys": "on"
			}
		},
		"includes": ["!src/common/modules/drizzle/schema.ts"],
		"enabled": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"enabled": true,
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "es5"
		},
		"assist": {
			"enabled": true
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"assist": {
			"enabled": false
		},
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": false
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useExplicitType": {
					"level": "off"
				}
			},
			"complexity": {
				"noForEach": "error",
				"noStaticOnlyClass": "off"
			},
			"recommended": true,
			"style": {
				"useConsistentMemberAccessibility": {
					"level": "error",
					"options": {
						"accessibility": "explicit"
					}
				},
				"useReadonlyClassProperties": "warn",
				"useImportType": "off"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
